[flake8]
format = ${blue_bold}%(row)d:${green_bold}%(col)d ${purple_bold}%(code)s${reset} %(text)s
statistics = True
count = True
inline-quotes = double
extend-ignore=
    I001
    I004
    WPS305
    WPS420
    WPS421
    WPS515
    C812
    C813
    C814
    C815
    C816
    E203
    W503
max-line-length=90
max-local-variables=10
max-line-complexity=20
